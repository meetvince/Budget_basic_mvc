@model MyBudget.ViewModel.CreditTransactionsVm

@{
    ViewBag.Title = "AddNewCreditTransaction";
    Layout = "~/Views/Layouts/_Header.cshtml";
}

<h2>Credit Transaction Management</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Credit Transactions</h3>
    </div>
    <div class="panel-body">
        <form class="form-horizontal" id="addNewCreditTransactionForm" method="post" action="@Url.Action("AddNewCreditTransactionPost", "Transaction")">
            <div class="form-group ">
                <label for="paymentSource" class="col-sm-2 control-label">Payment Source* (required)</label>
                <div class="dropdown col-md-3" >
                    <select class="form-control" id="paymentSource" name="paymentSource">
                        @foreach (var item in @Model.PaymentSources)
                        {
                            <option value="@item.Id" @(item.Name=="Monthly"?"selected":"")>@item.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="amount" class="col-sm-2 control-label">Amount* (required)</label>
                <div class="col-md-3">
                    <input type="text" class="form-control" id="amount" name="amount" value=@Model.Amount.ToString("c2") required>
                </div>
            </div>
            <div class="form-group">
                <label for="recur" class="col-sm-2 control-label">Recur*</label>
                <div class=" col-sm-1">
                    <input type="checkbox" class="input-group" id="recur" name="recur" value="true" checked="@Model.Recur">
                </div>
            </div>
            <div class="form-group ">
                <label for="recurrenceFrequency" class="col-sm-2 control-label">Recurrence Frequency*</label>
                <div class="dropdown col-md-3" >
                    <select class="form-control" id="recurrenceFrequency" name="recurrenceFrequency">
                        @foreach (var item in @Model.RecurrenceIntervalList)
                        {
                            <option value="@item.Key">@item.Value</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="transactionDate" class="col-sm-2 control-label">Transaction Date*</label>
                <div class=" col-sm-1">
                    <input type="text" class="input-group" id="transactionDate" name="transactionDate" value="@Model.TransactionDate" >
                </div>
            </div>
            <div>
                <button class="btn btn-primary" type="submit" id="btnAddNewPaymentSource">Add new Credit Transaction</button>
            </div>
        </form>
    </div>
</div>
