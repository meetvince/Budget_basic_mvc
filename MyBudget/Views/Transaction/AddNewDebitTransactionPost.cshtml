@model MyBudget.ViewModel.DebitTransactionsVm

@{
    ViewBag.Title = "AddNewDebitTransactionPost";
    Layout = "~/Views/Layouts/_Header.cshtml";
}

<h2>Debit Transaction Management</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Debit Transactions</h3>
    </div>
    <div class="panel-body">
        <form class="form-horizontal" id="addNewDebitTransactionForm" method="GET" action="@Url.Action("AddNewDebitTransaction", "Transaction")">
            <div class="form-group ">
                <label for="paymentSource" class="col-sm-2 control-label">Payment Destination* (required)</label>
                <div class="dropdown col-md-3" >
                    <input type="text" id="paymentSource" name="paymentSource" value="@Model.TransactionName" disabled="disabled"/>
                </div>
            </div>
            <div class="form-group">
                <label for="amount" class="col-sm-2 control-label">Amount* (required)</label>
                <div class="col-md-3">
                    <input type="number" class="form-control" id="amount" name="amount" value="@Model.Amount" disabled="disabled">
                </div>
            </div>
            <div class="form-group">
                <label for="recur" class="col-sm-2 control-label">Recur*</label>
                <div class=" col-sm-1">
                    <input type="checkbox" class="input-group" id="recur" name="recur" value="true" checked="@Model.Recur" disabled="disabled">
                </div>
            </div>
            <div>
                <button class="btn btn-primary" type="submit" id="btnAddNewPaymentSource">Add new Debit Transaction</button>
            </div>
        </form>
    </div>
    <div class="panel panel-footer panel-success">
        <h3 class="panel-title">@Model.Message</h3>
    </div>
</div>
