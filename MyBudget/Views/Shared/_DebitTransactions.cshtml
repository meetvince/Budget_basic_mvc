@model IEnumerable<MyBudget.ViewModel.DebitTransactionsVm>

<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">Debit Transactions</h3>
    </div>
    <div class="panel-body">
        <table id="debitTransactions" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Transaction Date</th>
            </tr>
        </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                <tr>
                    <td>@item.TransactionName</td>
                    <td>@item.Amount</td>
                    <td>@item.TransactionDate</td>
                </tr>
                }
            </tbody>
    </table>
    </div>
    <div class="panel-footer">
        <button class="btn btn-success" type="submit" id="btnAddNewDebitTransaction" onclick="location.href='@Url.Action("AddNewDebitTransaction","Transaction")'">Add new Debit Transaction</button>
    </div>
</div>
