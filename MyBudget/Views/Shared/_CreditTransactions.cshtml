@model IEnumerable<MyBudget.ViewModel.CreditTransactionsVm>

<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">Credit Transactions</h3>
    </div>
    <div class="panel-body">
        <table id="creditTransactions" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Transaction Date</th>
                <th>Recurrence</th>
            </tr>
        </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                <tr>
                    <td>@item.TransactionName</td>
                    <td>@item.Amount.ToString("C")</td>
                    <td>@item.TransactionDate</td>
                    <td>@item.RecurrenceInterval.ToString()</td>
                </tr>
                }
            </tbody>
    </table>
    </div>
    <div class="panel-footer">
        <button class="btn btn-success" type="submit" id="btnAddNewCreditTransaction" onclick="location.href='@Url.Action("AddNewCreditTransaction","Transaction")'">Add new Credit Transaction</button>
    </div>
</div>
