@model IEnumerable<MyBudget.ViewModel.BillTransactionVm>

<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Bill Transactions</h3>
    </div>
    <div class="panel-body">
        <table id="billTransactions" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Transaction Date</th>
            </tr>
        </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                <tr>
                    <td>@item.ExpenseDestinationName</td>
                    <td>@item.Amount.ToString("C")</td>
                    <td>@item.TransactionDateTime</td>
                </tr>
                }
            </tbody>
    </table>
    </div>
    <div class="panel-footer">
        <button class="btn btn-info" type="submit" id="btnAddNewBillTransaction" onclick="location.href='@Url.Action("AddNewBillTransaction","Transaction")'">Add new Bill Transaction</button>
    </div>
</div>

