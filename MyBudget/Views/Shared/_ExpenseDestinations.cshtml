@model IEnumerable<MyBudget.ViewModel.PaymentDestinationVm>

<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Payment Destinations</h3>
    </div>
    <div class="panel-body">
        <table id="paymentDestinations" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Date Created</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.UpdatedDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <button class="btn btn-primary" type="submit" id="btnAddNewPaymentDestination" onclick="location.href='@Url.Action("AddNewPaymentDestination","Home")'">Add new payment destination</button>
    </div>
</div>

