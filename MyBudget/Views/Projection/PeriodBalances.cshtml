@model IEnumerable<DomainModel.CommonModel.PeriodBalance>


<div class="row">
    @foreach (var item in @Model)
    {
   
        <div class="col-md-3">
            <div class="panel panel-success period-balance-tile">
                <div class="panel-heading">
                    <h3 class="panel-title">@item.Name  @item.Year</h3>
                </div>
                <div class="panel-body">
                    @*Current Period total balance*@
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Balance</h4>
                        </div>
                        <div class="col-md-6">
                            <h4><span class="label label-default">@item.Balance.ToString("c2")</span></h4>
                        </div>
                    </div>
                    @*total Credit balance*@
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Credits</h4>
                        </div>
                        <div class="col-md-6">
                            <h4><span class="label label-default">@item.Credit.ToString("c2")</span></h4>
                        </div>
                    </div>
                    @*total debit balance*@
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Spending</h4>
                        </div>
                        <div class="col-md-6">
                            <h4><span class="label label-default">@item.Debit.ToString("c2")</span></h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



