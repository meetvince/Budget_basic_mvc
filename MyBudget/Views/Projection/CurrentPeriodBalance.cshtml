@model  MyBudget.ViewModel.BalancesVm

<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Current Period Balances</h3>
    </div>
    <div class="panel-body">
        @*Current Period total balance*@
        <div class="row">
            <div class="col-md-4">
                <h3>Balance</h3>
            </div>
            <div class="col-md-6">
                <h3><span class="label label-primary">@Model.TotalBalanceThisPeriod.ToString("c2")</span></h3>
            </div>
        </div>
        @*total Credit balance*@
        <div class="row">
            <div class="col-md-4">
                <h3>Credits</h3>
            </div>
            <div class="col-md-6">
                <h3><span class="label label-success">@Model.TotalCreditThisPeriod.ToString("c2")</span></h3>
            </div>
        </div>
        @*total debit balance*@
        <div class="row">
            <div class="col-md-4">
                <h3>Spending</h3>
            </div>
            <div class="col-md-6">
                <h3><span class="label label-warning">@Model.TotalDebitThisPeriod.ToString("c2")</span></h3>
            </div>
        </div>
    </div>
</div>

